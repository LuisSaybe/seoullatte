{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "settings": ["settings"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-css-modules"],
    "typeRoots": ["node_modules/@types"],
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "exclude": ["node_modules"]
}
