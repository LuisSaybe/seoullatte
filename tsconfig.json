{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "web": ["web"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-css-modules"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
